    "@pecase/types": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/cors": "^2.8.13",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0"
  }
