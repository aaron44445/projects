# ============================================
# PEACASE API - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in the values
# See apps/api/src/lib/env.ts for validation rules

# ============================================
# REQUIRED - Server will not start without these
# ============================================

# Database connection string (required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/peacase

# JWT secrets for authentication (required, min 32 characters each)
# Generate secure secrets: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars-long
JWT_REFRESH_SECRET=your-refresh-secret-key-at-least-32-chars-long

# ============================================
# REQUIRED IN PRODUCTION ONLY
# ============================================

# Stripe API keys (required in production, optional in development)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
STRIPE_PROFESSIONAL_PRICE_ID=price_xxxxxxxxxxxxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxxxxxxxxxxxx

# ============================================
# OPTIONAL - Server works without these
# ============================================

# Server configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# SendGrid email service (optional - email features disabled if not set)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@peacase.com

# Twilio SMS service (optional - SMS features disabled if not set)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890

# Stripe publishable key (for frontend, not validated by API)
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx

# Cloudinary (optional - image upload disabled if not set)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Sentry error tracking (optional - disabled if not set)
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxxxxxxxx
SENTRY_RELEASE=peacase-api@1.0.0
SENTRY_ENABLE_DEV=false

# ============================================
# DEVELOPMENT TIPS
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Generate JWT secrets: openssl rand -base64 32
# 3. In development, only DATABASE_URL and JWT secrets are required
# 4. Stripe, SendGrid, Twilio, Cloudinary, and Sentry can be added later
