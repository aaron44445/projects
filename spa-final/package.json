{
  "name": "peacase",
  "version": "1.0.0",
  "private": true,
  "description": "Premium Spa & Salon Management Platform",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "test:api": "pnpm --filter @peacase/api test",
    "test:web": "pnpm --filter @peacase/web test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:migrate:deploy": "turbo db:migrate:deploy",
    "db:studio": "pnpm --filter @peacase/database studio",
    "typecheck": "turbo typecheck",
    "ci": "turbo lint typecheck build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.2.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
