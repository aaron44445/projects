# Database
DATABASE_URL=postgresql://user:password@host:5432/database
DATABASE_URL_NON_POOLING=postgresql://user:password@host:5432/database

# Environment
NODE_ENV=production

# API
API_PORT=3001
API_HOST=0.0.0.0
API_BASE_URL=https://api.peacase.com

# Web
WEB_PORT=3000
WEB_BASE_URL=https://peacase.com
NEXT_PUBLIC_API_URL=https://api.peacase.com

# JWT (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=generate-with-crypto-randomBytes
JWT_REFRESH_SECRET=generate-with-crypto-randomBytes
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# CORS
CORS_ORIGIN=https://peacase.com

# Features
REMINDER_24H_ENABLED=true
REMINDER_2H_ENABLED=true
RATE_LIMIT_ENABLED=true

# Optional Services
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
STRIPE_SECRET_KEY=
SENTRY_DSN=
